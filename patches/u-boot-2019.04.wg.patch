+u32 reverseEndian(u32 value)
+{
+    return (((value & 0x000000FF) << 24) |
+            ((value & 0x0000FF00) <<  8) |
+            ((value & 0x00FF0000) >>  8) |
+            ((value & 0xFF000000) >> 24));
+}
+
+u32 reverseBits8(u8 num)
+{
+    u8 count = sizeof(num) * 8 - 1;
+    u8 reverse_num = num;
+
+    num >>= 1;
+    while(num)
+    {
+       reverse_num <<= 1;
+       reverse_num |= num & 1;
+       num >>= 1;
+       count--;
+    }
+    reverse_num <<= count;
+//    printf("reverse_num  0x%02x\n", reverse_num);
+    return (u32)reverse_num;
+}
+
+u32 reverseBits32(u32 num)
+{
+    u32 count = sizeof(num) * 8 - 1;
+    u32 reverse_num = num;
+
+    num >>= 1;
+    while(num)
+    {
+       reverse_num <<= 1;
+       reverse_num |= num & 1;
+       num >>= 1;
+       count--;
+    }
+    reverse_num <<= count;
+//    printf("reverse_num  0x%02x\n", reverse_num);
+    return (u32)reverse_num;
+}
