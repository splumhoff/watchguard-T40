/include/ "t208xsi-pre.dtsi"
/include/ "t208xrdb.dtsi"

/ {
	model = "fsl,T2080RDB";
	compatible = "fsl,T2080RDB";
	#address-cells = <2>;
	#size-cells = <2>;
	interrupt-parent = <&mpic>;

	aliases {
		phy_sgmii_0 = &phy_sgmii_0;
		phy_sgmii_1 = &phy_sgmii_1;
		phy_sgmii_2 = &phy_sgmii_2;
	};

	rio: rapidio@ffe0c0000 {
		reg = <0xf 0xfe0c0000 0 0x11000>;

		port1 {
			ranges = <0 0 0xc 0x20000000 0 0x10000000>;
		};
		port2 {
			ranges = <0 0 0xc 0x30000000 0 0x10000000>;
		};
	};

	ifc: localbus@ffe124000 {
		reg = <0xf 0xfe124000 0 0x2000>;
		ranges = <0 0 0xf 0xefc00000 0x00400000>;

		nor@0,0 {
			#address-cells = <1>;
			#size-cells = <1>;
			compatible = "cfi-flash";
			reg = <0x0 0x0 0x400000>;
			bank-width = <2>;
			device-width = <1>;

			partition@00000000 {
				/*64KB*/
				reg = <0x00000000 0x00010000>;
				label = "NOR (RW) LANNER RCW Code";
			};

			partition@00010000 {
				/*128KB*/
				reg = <0x00010000 0x00020000>;
				label = "NOR (RW) WG CFG0";
			};

			partition@00030000 {
				/*64KB*/
				reg = <0x00030000 0x00010000>;
				label = "NOR (RW) WG CFG1";
			};

			partition@00040000 {
				/*64KB*/
				reg = <0x00040000 0x00010000>;
				label = "NOR (RW) WG MFG DATA";
			};

			partition@00050000 {
				/*704KB*/
				reg = <0x00050000 0x000B0000>;
				label = "NOR (RW) WG bootOpt Data & reserved";
			};

			partition@00100000 {
				/*704KB*/
				reg = <0x00100000 0x000B0000>;
				label = "NOR (RW) WG extra reserved 1";
			};

			partition@001B0000 {
				/*64KB*/
				reg = <0x001B0000 0x000B0000>;
				label = "NOR (RW) WG extra reserved 2";
			};

			partition@00260000 {
				/*768KB*/
				reg = <0x00260000 0x000C0000>;
				label = "NOR (RW) WG U-Boot FAILSAFE";
			};

			partition@00320000 {
				/*64KB*/
				reg = <0x00320000 0x00010000>;
				label = "NOR (RW) FMAN";
			};

			partition@00330000 {
				/*64KB*/
				reg = <0x00330000 0x00010000>;
				label = "NOR (RW) WG U-Boot ENV";
			};

			partition@00340000 {
				/*768KB*/
				reg = <0x00340000 0x000C0000>;
				label = "NOR (RW) WG U-Boot Image";
			};

		};

	};
};

&soc {
	spi@110000 {
		flash@0 {
			#address-cells = <1>;
			#size-cells = <1>;
			compatible = "winbond,gd25q64";
			reg = <0>;
			spi-max-frequency = <10000000>; /* input clock */
		};

	};

	i2c@118000 {
                rtc@32 {
                        compatible = "ricoh,rs5c372a";
                        reg = <0x32>;
                };
                hwmon@2d {
                        compatible = "winbond,w83793";
                        reg = <0x2d>;
                };
                hwmon@2c {
                        compatible = "winbond,w83793";
                        reg = <0x2c>;
                };
		tpm@29 {
                        compatible = "tpm,tpm_i2c_atmel";
                        reg = <0x29>;
		};
	};

	sdhc@114000 {
		voltage-ranges = <1800 1800 3300 3300>;
	};

	fman@400000 {
		sleep = <&rcpm 0x00000008>;

		ethernet@e0000 {
			phy-handle = <&phy_sgmii_0>;
			phy-connection-type = "sgmii";
		};

		ethernet@e2000 {
			phy-handle = <&phy_sgmii_1>;
			phy-connection-type = "sgmii";
		};

		ethernet@e4000 {
			fixed-link = <0x10 1 1000 0 0>;
			phy-connection-type = "rgmii";
		};

		ethernet@e6000 {
			fixed-link = <4 1 1000 0 0>;
			phy-connection-type = "rgmii";
		};

		ethernet@f2000 {
			phy-handle = <&phy_sgmii_2>;
			phy-connection-type = "sgmii";
			sleep = <&rcpm 0x00000008>;
			/* HARD Coded to get around the u-boot fixup */
			mac-address = [ 00 90 7f d2 09 52 ];
			local-mac-address = [ 00 90 7f d2 09 52 ];
		};

		mdio0: mdio@fc000 {
                                phy_sgmii_0: ethernet-phy@01 {
                                        reg = <0x01>;
                                };      
                                phy_sgmii_1: ethernet-phy@02 {
                                        reg = <0x02>;
                                };      
                                phy_sgmii_2: ethernet-phy@03 {
                                        reg = <0x00>;
                                }; 
		};

	};

	fsldpaa: fsl,dpaa {
		compatible = "simple-bus", "fsl,dpaa";
		ethernet@0 {
			compatible = "fsl,dpa-ethernet";
			fsl,fman-mac = <&enet7>;
		};
		ethernet@1 {
			compatible = "fsl,dpa-ethernet";
			fsl,fman-mac = <&enet0>;
		};
		ethernet@2 {
			compatible = "fsl,dpa-ethernet";
			fsl,fman-mac = <&enet1>;
		};
		ethernet@3 {
			compatible = "fsl,dpa-ethernet";
			fsl,fman-mac = <&enet2>;
		};
		ethernet@5 {
			compatible = "fsl,dpa-ethernet";
			fsl,fman-mac = <&enet3>;
		};
	};
};

&bportals {
	bman-portal@28000 {
		cell-index = <0xa>;
	};

	bman-portal@2c000 {
		cell-index = <0xb>;
	};

	bman-portal@30000 {
		cell-index = <0xc>;
	};

	bman-portal@34000 {
		cell-index = <0xd>;
	};

	bman-portal@38000 {
		cell-index = <0xe>;
	};

	bman-portal@3c000 {
		cell-index = <0xf>;
	};

	bman-portal@40000 {
		cell-index = <0x10>;
	};

	bman-portal@44000 {
		cell-index = <0x11>;
	};
};

/include/ "m300-post.dtsi"

/include/ "qoriq-fman3-0-sdk.dtsi"
/include/ "qoriq-bman-portals-sdk.dtsi"
/include/ "qoriq-qman3-portals-sdk.dtsi"
/include/ "qoriq-qman3-ceetm0-32-sdk.dtsi"
